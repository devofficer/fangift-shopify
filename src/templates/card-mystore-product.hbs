<div class="p-4 flex gap-6 rounded-[16px] bg-white items-center">
  <div class="flex-grow w-0">
    <p class="text-body-md text-black whitespace-nowrap text-ellipsis overflow-hidden">
      {{title}}
    </p>
    <p class="text-body-sm text-accent-peach">
      ${{price}}</p>
  </div>
  <div class="flex gap-1">
    <button class="btn btn-wish-icon btn-mystore-product-edit" data-mystore-product="{{id}}">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
        <path
          d="M12.08 4.107a.58.58 0 0 0 0-.823L10.717 1.92a.58.58 0 0 0-.823 0L8.82 2.987l2.188 2.187M1.75 10.062v2.188h2.188l6.451-6.458-2.187-2.187-6.452 6.457z"
          fill="#575757" />
      </svg>
    </button>
    <button class="btn btn-wish-icon btn-mystore-product-delete" data-modal-target="modal-delete-mystore-product" data-mystore-product="{{id}}">
      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M5.25 1.75v.583H2.335V3.5h.583v7.583a1.167 1.167 0 0 0 1.167 1.167h5.833a1.167 1.167 0 0 0 1.167-1.167V3.5h.583V2.333H8.751V1.75h-3.5zm0 2.917h1.167v5.25H5.251v-5.25zm2.334 0h1.167v5.25H7.584v-5.25z"
          fill="#575757" />
      </svg>
    </button>
  </div>
</div>