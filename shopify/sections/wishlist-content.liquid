{% assign no_gift = false %}
{% assign has_collections = true %}

<div class="bg-primary-background">
  <div class="container px-[45px] pb-[100px] grid grid-cols-1 gap-x-[18px] gap-y-[16px]">
    <div class="-mt-8">
      <div class="px-6 py-4 flex items-center justify-between bg-primary-white rounded-[8px]">
        <h4 class="text-heading-h4 text-primary-black">My Wishlist</h4>
        <div class="flex items-center gap-6">
          <button
            data-dropdown-toggle="dropdown-filter"
            class="bg-primary-white border border-primary-text text-[12px] text-primary-text rounded-[5px] h-8 px-3 text-center inline-flex items-center gap-[6px]"
            type="button"
          >
            Filter
            {% render 'icon-arrow-dropdown' %}
          </button>
          <div
            id="dropdown-filter"
            class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700"
          >
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Dashboard</a
                >
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Settings</a
                >
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Earnings</a
                >
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Sign out</a
                >
              </li>
            </ul>
          </div>
          <button
            data-dropdown-toggle="dropdown-sorting"
            class="bg-primary-white border border-primary-text text-[12px] text-primary-text rounded-full h-8 px-3 text-center inline-flex items-center gap-[6px]"
            type="button"
          >
            Sorting
            {% render 'icon-arrow-dropdown' %}
          </button>
          <div
            id="dropdown-sorting"
            class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700"
          >
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Dashboard</a
                >
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Settings</a
                >
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Earnings</a
                >
              </li>
              <li>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Sign out</a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    {% if no_gift %}
      <div class="min-h-[50vh] flex flex-col items-center justify-center gap-4">
        {% render 'icon-gift-big' %}
        <h3 class="text-heading-h3 text-primary-black">No Gifts Added Yet</h3>
        <p class="text-body-md text-primary-text">Your wishlist is empty. Click 'Add Gift' to add items.</p>
        <button
          type="button"
          class="btn btn-primary"
          id="btn-add-gift"
        >
          + Add gift
        </button>
      </div>
    {% else %}
      {% if has_collections %}
        <div class="flex justify-between items-center">
          <h5 class="text-heading-h5">Collections</h5>
          <button class="btn-small bg-primary-border text-primary-black">
            {% render 'icon-plus' %}
            <span>Collection</span>
          </button>
        </div>
        <div class="grid grid-cols-4 gap-5">
          {% render 'collection-card': title: 'Fitness', count: 16, previews: 'preview1.png,preview1-0.png,preview1-1.png' %}
          {% render 'collection-card': title: 'Fitness', count: 16, previews: 'preview1.png,preview1-0.png,preview1-1.png' %}
          {% render 'collection-card': title: 'Fitness', count: 16, previews: 'preview1.png,preview1-0.png,preview1-1.png' %}
          {% render 'collection-card': title: 'Fitness', count: 16, previews: 'preview1.png,preview1-0.png,preview1-1.png' %}
        </div>
      {% endif %}
      {% if has_collections %}
        <div class="flex justify-between items-center">
          <h5 class="text-heading-h5">All Products</h5>
          <button class="btn-small bg-accent-peach text-primary-white">
            {% render 'icon-plus' %}
            <span>Product</span>
          </button>
        </div>
      {% endif %}
      <div class="grid grid-cols-6 gap-x-[18px] gap-y-[16px]">
