<header class="bg-primary">
  <div class="xl:container px-6 md:px-[45px] w-full h-[73px] flex items-center justify-between">
    <div class="flex items-center gap-4 md:gap-[60px] h-full">
      <a id="logo" href="/">
        {% render 'logo-light.liquid' %}
      </a>

      {% render 'navbar' %}
      {% render 'navbar-mb' %}
    </div>

    <div class="flex items-center gap-4" id="profile-settings">
      <div class="items-center gap-2 hidden shipping-country">
        <span class="text-white">Ship to Country:</span>
        <div class="flex items-center gap-2 ship-hidden:bg-white/30 text-white rounded-[8px] ship-hidden:py-1 ship-hidden:px-2">
          <img src="#" class="img-shipping-country w-[28px] h-[18px]">
          <span class="text-shipping-country hidden ship-hidden:inline"></span>
        </div>
      </div>
      <a href="/pages/settings" class="btn btn-icon-filled">
        {% render 'icon-setting.liquid' %}
      </a>
      {% render 'profile-dropdown' %}
      <button
        class="btn btn-icon-menu z-20 hidden"
        data-collapse-toggle="navbar-hamburger"
        type="button"
      >
        {% render 'icon-menu' %}
      </button>
    </div>
  </div>
</header>
