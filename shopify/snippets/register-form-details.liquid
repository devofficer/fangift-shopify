<form
  id="form-details"
  class="card-auth relative hidden"
  onsubmit="return false;"
>
  {% render 'button-backward', id: 'btn-back-details' %}

  <div class="text-center my-8">
    <h1 class="text-primary-black text-heading-h3 mb-2">Welcome, @<span id="lbl-username"></span></h1>
    <div class="text-center text-primary-text text-body-md">
      <span>Already have an account?</span>
      <a href="/account/login" class="text-accent-peach underline">Log in</a>
    </div>
  </div>

  {% comment %}
    <div class="flex gap-4 mb-4">
    <button class="btn btn-google flex-grow">
    {% render 'icon-google.liquid' %}
    Sign in with Google
    </button>
    <button class="btn btn-facebook">
    {% render 'icon-facebook.liquid' %}
    </button>
    </div>

    <div class="flex items-center justify-center gap-3 mb-4">
    <hr class="border-primary-border flex-grow">
    <span class="text-body-sm text-primary-text">or</span>
    <hr class="border-primary-border flex-grow">
    </div>
  {% endcomment %}
  <div class="grid grid-cols-1 gap-4 mb-8">
    <div class="error" error="Invalid email format">
      <input
        type="text"
        id="txt-email"
        name="email"
        placeholder="Email"
        class="textfield"
      >
    </div>
    <input
      type="password"
      id="txt-password"
      name="password"
      placeholder="Password"
      class="textfield"
    >
    <div class="error" error="Password should be same">
      <input
        type="password"
        id="txt-confirm-password"
        name="password"
        placeholder="Confirm Password"
        class="textfield"
      >
    </div>
    <button
      id="btn-register"
      class="btn btn-primary"
      type="submit"
      disabled
    >
      ðŸ”¥ Sign Up
    </button>
  </div>

  <hr class="-mx-5 border-primary-border mb-8">

  <div class="text-center text-primary-text text-body-md">
    By signing up you agree to our
    <a href="#" class="text-accent-peach underline">Terms of Service</a>
    and
    <a href="#" class="text-accent-peach underline">Privacy Policy</a>
  </div>
</form>
