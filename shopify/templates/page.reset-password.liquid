<main class="overflow-auto">
  <div class="bg-[url(auth-bg.svg)] bg-cover bg-no-repeat min-h-screen">
    {% section 'header-landing' %}

    <div class="container px-[100px]">
      <div class="pt-[22px] pb-24">
        <div class="grid grid-cols-1 gap-[60px] xl:grid-cols-2">
          <form
            class="card-auth flex flex-col justify-center"
            onsubmit="return false;"
            id="form-reset"
          >
            <div class="text-center my-8">
              <h1 class="text-primary-black text-heading-h3 mb-2">Please enter a new password for your account.</h1>
            </div>

            <div class="grid grid-cols-1 gap-4 mb-8 px-5">
              <input
                type="password"
                id="text-new-password"
                name="new-password"
                placeholder="New Password"
                class="textfield"
              >
              <button
                id="btn-reset"
                class="btn btn-primary"
                type="submit"
              >
                Reset Password
              </button>
            </div>

            <hr class="-mx-5 border-primary-border mb-8">

            <div class="text-center text-primary-text text-body-md">
              Don't have a account?
              <a href="/account/register" class="text-accent-peach underline">Signup</a>
            </div>
          </form>
          {{ 'auth-img0.png' | asset_url | img_tag: 'main-bg', 'hidden xl:block', '600x' }}
        </div>
      </div>
    </div>
  </div>
</main>

<script src="{{'reset-password.min.js' | asset_url}}" defer></script>
