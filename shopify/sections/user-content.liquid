<div class="bg-primary-background flex flex-col">
  <div class="container px-6 py-10 md:px-[45px] md:pb-[100px]">
    <div class="grid grid-cols-10">
      <div class="col-span-10 md:col-span-3 md:mt-[-150px]">
        <div id="profile" class="bg-primary-white rounded-[8px] px-6 py-4 mb-5">
          <div class="w-[120px] h-[120px] mx-auto mb-6 avatar flex items-center justify-center">
            <img class="rounded-full w-full h-full object-cover" id="img-user-picture">
          </div>
          <h4 class="text-heading-h4 text-black mb-2 text-center" id="text-public-name">Public Name</h4>
          <p class="text-body-lg text-accent-peach text-center mb-6" id="text-username">@username</p>
          <p class="text-body-sm text-primary-text text-center mb-6" id="text-bio">Short Bio.</p>
          <button class="btn btn-link mb-6">
            {% render 'icon-link' %}
            <span>Share</span>
          </button>
        </div>
      </div>
      <div class="col-span-10 md:col-span-7 md:pt-[32px] md:pl-[57px]" id="wishlist">
        <h5 class="text-heading-h5 text-primary-black mb-6">All Gifts</h5>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-[28px] relative" id="container-all-gifts"></div>
      </div>
    </div>
  </div>

  <div
    id="drawer-cart"
    class="drawer"
    tabindex="-1"
    aria-labelledby="drawer-label"
  >
    <button
      type="button"
      class="btn-close-drawer"
      id="btn-close-cart"
    >
      {% render 'icon-close' : class: 'w-3 h-3' %}
    </button>
    <h4 class="text-heading-h4 mb-[76px]">Gift Cart ðŸŽ€</h4>
    <div class="flex-grow mb-8">
      <div class="grid grid-cols-1 gap-8" id="container-gift-cart"></div>
    </div>

    <hr class="border-1 -mx-6 md:-mx-10 mb-8">
    <div class="flex justify-between items-center mb-8">
      <p>Subtotal:</p>
      <span id="text-subtotal"></span>
    </div>

    <textarea
      id="text-message"
      rows="4"
      class="textarea mb-8 max-h-[150px] flex-shrink-0"
      placeholder="Your gift message...."
    ></textarea>

    <button
      id="btn-checkout"
      type="button"
      class="btn btn-primary flex-shrink-0 w-full"
    >
      Checkout
    </button>
  </div>
</div>

<div
  id="drawer-gift-details"
  class="drawer"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <button type="button" class="btn-close-drawer">
    {% render 'icon-close' : class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-4 md:mb-[76px]">Gift Details</h4>
  <input
    type="file"
    class="hidden"
    name="main-image"
    id="file-main-image"
  >
  <div class="mb-4 relative w-full md:w-[340px] rounded-[16px]">
    <img
      alt="product image"
      data-placeholder="{{ 'placeholder-image.png' | asset_url }}"
      class="w-[400px] h-[300px] object-contain rounded-[16px]"
      id="img-product-main"
    >
  </div>
  <h4 class="text-heading-h4 mb-4" id="text-product-title"></h4>
  <h5 class="text-heading-h5 mb-4" id="text-product-price"></h5>
  <h3 class="text-body-md mb-2">Product Description</h3>
  <div class="text-body-sm flex-grow mb-8 text-gray-500" id="text-desc"></div>
  <button
    type="button"
    class="btn btn-primary w-full"
    id="btn-add-cart"
  >
    Add to Cart
  </button>
</div>

{{ 'user.min.js' | asset_url | script_tag }}
