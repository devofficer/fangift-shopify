<div class="card-product just-created">
  <div class="grid grid-cols-1 gap-2">
    <div class="h-[144px] bg-primary-background rounded-[8px] relative cursor-pointer group overflow-hidden btn-add-product" data-product="{{ productId }}">
      <img class="w-full h-full object-contain group-hover:scale-110 transition-transform" src="{{ imageUrl }}" loading="lazy">
    </div>
    <span class="text-body-sm text-black text-ellipsis overflow-hidden whitespace-nowrap">
      {{ title }}
    </span>
    <div class="grid grid-cols-2 gap-2">
      <div class="border border-primary-border p-1 rounded-[8px] text-center text-body-xs text-black">${{
        price }}
      </div>
      <button class="btn btn-view-details btn-add-product" data-product="{{ productId }}">Add</button>
    </div>
  </div>
</div>