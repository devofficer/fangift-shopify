{% schema %}
{
  "name": "content-header",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "center",
          "label": "Cetner"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}

<div class="{% if section.settings.title != "" %}md:min-h-[300px]{% endif %} bg-primary bg-[url(shop-bg.svg)] bg-no-repeat bg-cover bg-center">
  <div class="container px-6 pt-4 pb-8 md:p-[100px]">
    <h2
      class="text-heading-h4 md:text-heading-h2 text-primary-white mb-2 md:mb-6"
      style="text-align:{{ section.settings.alignment }};"
    >
      {{ section.settings.title }}
    </h2>
    <p
      class="{% if section.settings.alignment == 'left' %}md:pr-[270px]{% endif %} text-body-md md:text-body-xl text-primary-white/80"
      style="text-align:{{ section.settings.alignment }};"
    >
      {{ section.settings.content }}
    </p>
  </div>
</div>
