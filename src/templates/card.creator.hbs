<div class="flex flex-col justify-between px-6 py-4 bg-primary-white rounded-[8px] ">
  <div>
    <div
      class="w-[120px] h-[120px] mx-auto mb-4 shadow-[0_20px_100px_0_#2D27474D] avatar flex items-center justify-center">
      <img src="{{ avatar }}" class="rounded-full w-full h-full object-cover" id="img-avatar">
    </div>
    <h4 class="text-heading-h4 text-black mb-2 text-center">{{publicName}}</h4>
    <p class="text-body-lg text-accent-peach text-center mb-4">@{{name}}</p>
    <p class="text-body-sm text-primary-text text-center mb-4">
      {{bio}}
    </p>
  </div>
  <a class="btn btn-link" href="/pages/user?username={{name}}">View Profile</a>
</div>