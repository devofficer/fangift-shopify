<form
  id="form-details"
  class="card-register relative hidden"
  onsubmit="return false;">

  <div class="text-center mb-8">
    <button
      id="btn-back-details"
      type="button"
      class="btn-icon absolute left-10 top-10">
      <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none">
        <path
          d="M9.57 5.93 3.5 12l6.07 6.07M20.5 12H3.67"
          stroke="currentColor"
          stroke-width="2"
          stroke-miterlimit="10"
          stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </button>
    <h1 class="text-primary-black text-heading-h3 mb-2">
      Welcome, @<span id="lbl-username"></span>
    </h1>
    <div class="text-center text-primary-text text-body-md">
      <span>Already have an account?</span>
      <a href="#" class="text-accent-peach underline">Log in</a>
    </div>
  </div>

  <div class="flex gap-4 mb-4">
    <button class="btn btn-google flex-grow">
      {{ 'icon-google.svg' | asset_url | img_tag: 'google' }}
      Sign in with Google
    </button>
    <button class="btn btn-facebook">
      {{ 'icon-facebook.svg' | asset_url | img_tag: 'facebook' }}
    </button>
  </div>

  <div class="flex items-center justify-center gap-3 mb-4">
    <hr class="border-primary-border flex-grow" />
    <span class="text-body-sm text-primary-text">or</span>
    <hr class="border-primary-border flex-grow" />
  </div>

  <div class="grid grid-cols-1 gap-4 mb-8">
    <input
      type="text"
      id="txt-email"
      name="email"
      placeholder="Email"
      class="textfield" />
    <input
      type="password"
      id="txt-password"
      name="password"
      placeholder="Password"
      class="textfield" />
    <input
      type="password"
      id="txt-confirm-password"
      name="password"
      placeholder="Confirm Password"
      class="textfield" />
    <button
      id="btn-register"
      class="btn btn-primary !font-plus-semi"
      type="submit"
      disabled>
      ðŸ”¥ Sign Up
    </button>
  </div>

  <hr class="-mx-5 border-primary-border mb-8" />

  <div class="text-center text-primary-text text-body-md">
    By signing up you agree to our
    <a href="#" class="text-accent-peach underline">Terms of Service</a>
    and
    <a href="#" class="text-accent-peach underline">Privacy Policy</a>
  </div>
</form>