<main class="overflow-auto">
  <div class="bg-[url(bg.svg)] bg-cover bg-no-repeat min-h-screen">
    <div class="container px-[100px]">
      {% section 'account_header' %}
      <div class="pt-[22px] pb-24">
        <div class="grid grid-cols-1 gap-[60px] xl:grid-cols-2">
          <form class="card-auth flex flex-col justify-center" onsubmit="return false;">
            <div class="text-center my-8">
              <h1 class="text-primary-black text-heading-h3 mb-2">Please enter a new password for your account.</h1>
            </div>

            <div class="grid grid-cols-1 gap-4 mb-8 px-5">
              <input
                type="password"
                id="txt-password"
                name="password"
                placeholder="Password"
                class="textfield"
              >
              <input
                type="password"
                id="txt-confirm-password"
                name="confirm-password"
                placeholder="Confirm Password"
                class="textfield"
              >
              <button
                id="btn-register"
                class="btn btn-primary"
                type="submit"
              >
                Reset Password
              </button>
            </div>

            <hr class="-mx-5 border-primary-border mb-8">

            <div class="text-center text-primary-text text-body-md">
              Don't have a account?
              <a href="/pages/register" class="text-accent-peach underline">Signup</a>
            </div>
          </form>
          <img src="{{ 'bg-auth.png' | asset_url }}" class="hidden xl:block">
        </div>
      </div>
    </div>
  </div>
</main>

<script src="{{'reset-password.min.js' | asset_url}}" defer></script>
