<div class="bg-primary-background">
  <div class="bg-primary-white border-b border-primary-border">
    <div class="container px-[45px] grid grid-cols-10">
      <div class="col-start-4 col-span-7">
        <div class="h-[70px] flex items-center justify-center">
          <ul class="flex flex-wrap gap-10 text-center text-primary-text text-body-sm">
            <li>
              <button
                id="wishlist-tab"
                data-tabs-target="#wishlist"
                class="inline-flex items-center gap-2 justify-center py-4 active"
              >
                {% render 'icon-heart-small': class: '[.active>&]:text-accent-peach' %}
                <span class="[.active>&]:text-accent-peach">Wishlist</span>
              </button>
            </li>
            <li>
              <button
                id="products-tab"
                data-tabs-target="#products"
                class="inline-flex items-center gap-2 justify-center py-4"
              >
                {% render 'icon-bag-tick': class: '[.active>&]:text-accent-peach' %}
                <span class="[.active>&]:text-accent-peach">Products</span>
                <div class="[.active>&]:text-accent-peach [.active>&]:border-accent-peach w-5 h-5 flex items-center justify-center border border-primary-border rounded-full text-[8px] font-plus-bold">
                  4
                </div>
              </button>
            </li>
            <li>
              <button
                id="gifts-tab"
                data-tabs-target="#gifts"
                class="inline-flex items-center gap-2 justify-center py-4"
              >
                {% render 'icon-profile': class: '[.active>&]:text-accent-peach' %}
                <span class="[.active>&]:text-accent-peach">Gifters</span>
              </button>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container px-[45px] pb-[100px]">
    <div class="grid grid-cols-10">
      <div class="col-span-3 mt-[-232px]">
        <div id="profile" class="bg-primary-white rounded-[8px] px-6 py-4 mb-5">
          {% render 'avatar' | class: 'mx-auto mb-6 shadow-[0_20px_100px_0_#2D27474D]' %}
          <h4 class="text-heading-h4 text-black mb-2 text-center">Syraphic</h4>
          <p class="text-body-lg text-accent-peach text-center mb-6">@syraphic</p>
          <button class="btn bg-primary-border py-[10px] text-body-sm w-full rounded-[5px] mb-2">Following</button>
          <button class="btn btn-link mb-6">
            {% render 'icon-link' %}
            <span>Share</span>
          </button>
          <p class="text-body-sm text-primary-text text-center mb-6">Part time streamer. Full time clownery expert.</p>
          <button class="btn btn-link mb-4">
            {% render 'icon-instagram-small' %}
            <span>Instagram</span>
          </button>
          <button class="btn btn-link">
            {% render 'icon-twitch-small' %}
            <span>Twitch</span>
          </button>
        </div>
        <div id="leaderboard" class="bg-primary-white rounded-[8px] px-6 py-4 mb-5">
          <h4 class="text-heading-h4 text-black mb-6 text-center">Leaderboard</h4>
          <div class="grid grid-cols-1 gap-6">
            {% render 'leaderboard-row' | img: 'user3.png', username: 'La-Wedia', price: '130.00', order: 1 %}
            {% render 'leaderboard-row' | img: 'user-anonymous.png', username: 'Anonymous', price: '20.00', order: 2 %}
          </div>
        </div>
        <div id="recent-gifters" class="bg-primary-white rounded-[8px] px-6 py-4">
          <h4 class="text-heading-h4 text-black mb-6 text-center">Recent Gifters</h4>
          <div class="grid grid-cols-1 gap-6">
            {% render 'gifter' | img: 'user3.png', username: 'La-Wedia', ago: '2 minutes ago' %}
            {% render 'gifter' | img: 'user4.png', username: 'Monica-J', ago: '8 minutes ago' %}
            {% render 'gifter' | img: 'user5.png', username: 'Lucian02', ago: '4 hours ago' %}
            {% render 'gifter' | img: 'user-anonymous.png', username: 'Anonymous', ago: '2 days ago' %}
          </div>
        </div>
      </div>
      <div class="col-span-7 pt-[32px] pl-[57px]" id="wishlist">
        <h5 class="text-heading-h5 text-primary-black mb-6">All Gifts</h5>
        <div class="grid grid-cols-4 gap-[28px]">
          {% render 'gift-card' | img: 'product0.png', title: 'Apple AirPods Max', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product1.png', title: 'Oculus Quest', price: '59.99' %}
          {% render 'gift-card' | img: 'product2.png', title: 'The Workout Mat', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product3.png', title: 'Gymshark Energy', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product0.png', title: 'Apple AirPods Max', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product1.png', title: 'Oculus Quest', price: '59.99' %}
          {% render 'gift-card' | img: 'product2.png', title: 'The Workout Mat', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product3.png', title: 'Gymshark Energy', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product0.png', title: 'Apple AirPods Max', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product1.png', title: 'Oculus Quest', price: '59.99' %}
          {% render 'gift-card' | img: 'product2.png', title: 'The Workout Mat', price: '59.99', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product3.png', title: 'Gymshark Energy', price: '59.99', external_link: 'amazon.com' %}
        </div>
      </div>
      <div class="col-span-7 pt-[32px] pl-[57px]" id="products">
        <h5 class="text-heading-h5 text-primary-black mb-6">Sold by Syraphic</h5>
        <div class="grid grid-cols-4 gap-[28px]">
          {% render 'gift-card' | img: 'product0.png', title: 'Apple AirPods Max', price: '59.99', sold: true %}
          {% render 'gift-card' | img: 'product1.png', title: 'Oculus Quest', price: '59.99', sold: true %}
          {% render 'gift-card' | img: 'product2.png', title: 'The Workout Mat', price: '59.99', sold: true %}
          {% render 'gift-card' | img: 'product4.png', title: 'The Workout Mat', price: '59.99', sold: true %}
        </div>
      </div>
      <div class="col-span-7 pt-[32px] pl-[57px]" id="gifts">
        <div class="flex items-center gap-6 mb-6">
          <h5 class="text-heading-h5 text-primary-black">Received Gifts</h5>
          <span class="w-5 h-5 flex items-center justify-center border border-primary-border rounded-full text-[8px] font-plus-bold">
            3
          </span>
        </div>
        <div class="grid grid-cols-4 gap-[28px]">
          {% render 'gift-card' | img: 'product0.png', title: 'Apple AirPods Max', gifted_by: 'La-Wedia', external_link: 'amazon.com' %}
          {% render 'gift-card' | img: 'product1.png', title: 'Oculus Quest', gifted_by: 'La-Wedia' %}
          {% render 'gift-card' | img: 'product2.png', title: 'The Workout Mat', gifted_by: 'La-Wedia' %}
        </div>
      </div>
    </div>
  </div>
</div>

