<div class="bg-primary-background flex flex-col">
  <div class="container px-6 py-4 md:px-[45px] md:pb-[100px]">
    <div class="grid grid-cols-10">
      <div class="col-span-10 md:col-span-3 md:mt-[-150px]">
        <div id="profile" class="bg-primary-white rounded-[8px] px-6 py-4 mb-5 relative">
          <div class="flex md:flex-col mb-2 md:mb-0 gap-2">
            <div class="w-[80px] h-[80px] md:w-[120px] md:h-[120px] md:mx-auto md:mb-6 avatar flex items-center justify-center">
              <img
                class="rounded-full w-full h-full object-cover"
                src="{{ 'user-anonymous.png' | asset_url }}"
                id="img-user-picture"
              >
            </div>
            <div>
              <h4 class="text-heading-h4 text-black md:mb-2 text-center flex justify-center items-center gap-2">
                <span id="text-public-name">&nbsp;&nbsp;&nbsp;</span>
                <button class="btn-icon flex-shrink-0 flex md:hidden items-center justify-center rounded-full text-accent-purple btn-share">
                  <svg
                    fill="currentColor"
                    height="22px"
                    width="22px"
                    viewBox="0 0 60 60"
                  >
                    <path d="M30,0C13.458,0,0,13.458,0,30s13.458,30,30,30s30-13.458,30-30S46.542,0,30,0z M30,58C14.561,58,2,45.439,2,30   S14.561,2,30,2s28,12.561,28,28S45.439,58,30,58z" />
                    <path d="M39,20c3.309,0,6-2.691,6-6s-2.691-6-6-6c-3.131,0-5.705,2.411-5.973,5.474L18.961,23.788C18.086,23.289,17.077,23,16,23   c-3.309,0-6,2.691-6,6s2.691,6,6,6c1.077,0,2.086-0.289,2.961-0.788l14.065,10.314C33.295,47.589,35.869,50,39,50   c3.309,0,6-2.691,6-6s-2.691-6-6-6c-2.69,0-4.972,1.78-5.731,4.223l-12.716-9.325C21.452,31.848,22,30.488,22,29   s-0.548-2.848-1.448-3.898l12.716-9.325C34.028,18.22,36.31,20,39,20z M39,10c2.206,0,4,1.794,4,4s-1.794,4-4,4s-4-1.794-4-4   S36.794,10,39,10z M12,29c0-2.206,1.794-4,4-4s4,1.794,4,4s-1.794,4-4,4S12,31.206,12,29z M39,40c2.206,0,4,1.794,4,4s-1.794,4-4,4   s-4-1.794-4-4S36.794,40,39,40z" />
                  </svg>
                </button>
              </h4>
              <p class="text-body-lg text-accent-peach text-center md:mb-6" id="text-username">&nbsp;&nbsp;&nbsp;</p>
            </div>
          </div>
          <p class="text-body-sm text-primary-text md:mb-6" id="text-bio">&nbsp;&nbsp;&nbsp;</p>
          <div class="flex gap-2 items-center mb-6">
            <button class="btn btn-link flex-grow hidden md:flex btn-share-profile">
              {% render 'icon-link' %}
              <span>Share</span>
            </button>
            <button class="btn-icon flex-shrink-0 hidden md:flex items-center justify-center rounded-full text-accent-purple btn-share">
              <svg
                fill="currentColor"
                height="32px"
                width="32px"
                viewBox="0 0 60 60"
              >
                <path d="M30,0C13.458,0,0,13.458,0,30s13.458,30,30,30s30-13.458,30-30S46.542,0,30,0z M30,58C14.561,58,2,45.439,2,30   S14.561,2,30,2s28,12.561,28,28S45.439,58,30,58z" />
