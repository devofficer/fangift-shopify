<div class="card-product">
  <div class="grid grid-cols-1 gap-2">
    <div class="h-[144px] bg-primary-background rounded-[8px] relative">
      <button class="btn btn-favorite group">
        <svg class="icon-favorite" width="36" height="36" viewBox="0 0 36 36" fill="none">
          <rect width="36" height="36" rx="18" fill="#fff" />
          <path
            d="m17.667 12.69.333.447.334-.446A4.207 4.207 0 0 1 21.7 11c2.327 0 4.217 1.895 4.217 4.241 0 .947-.151 1.82-.413 2.63l-.001.003c-.628 1.989-1.916 3.592-3.306 4.787-1.392 1.196-2.863 1.962-3.814 2.286l-.005.001c-.083.03-.22.052-.378.052-.157 0-.294-.022-.378-.052l-.004-.001c-.951-.324-2.422-1.09-3.814-2.286-1.39-1.195-2.678-2.798-3.306-4.787l-.001-.003a8.48 8.48 0 0 1-.413-2.63c0-2.346 1.89-4.241 4.216-4.241 1.371 0 2.6.666 3.367 1.69z"
            fill="currentColor" stroke="currentColor" stroke-width=".833" />
        </svg>
      </button>
      <img class="w-full h-full" src="{{ featuredImage.url }}" alt="{{ featuredImage.alt }}" loading="lazy"
        width="{{ featuredImage.width }}" height="{{ featuredImage.height }}">
    </div>
    <span class="text-body-sm text-black">
      {{ title }}
    </span>
    <span class="text-body-xs text-accent-peach"> @{{ vendor }} </span>
    <div class="flex gap-2">
      <div class="border border-primary-border p-2 rounded-[8px] text-body-xs text-black">${{ priceRange.minVariantPrice.amount }}
      </div>
      <button class="btn btn-view-details flex-grow">View Details</button>
    </div>
  </div>
</div>