<nav
  role="navigation"
  class="hidden fixed z-10 inset-0 bg-cover bg-[url(landing-hamburger.svg)] bg-white body:overflow-hidden"
  id="navbar-hamburger"
>
  <div class="flex flex-col justify-between px-5 h-full">
    <div class="flex items-center justify-between h-[98px]">
      <a id="logo" href="/">
        {% render 'logo.liquid' %}
      </a>
    </div>

    <ul class="flex flex-col flex-grow gap-[40px]">
      {% for link in linklists['main-menu'].links %}
        {% capture clsx -%}
          {%- if link.active -%}
            {%- echo "text-accent-purple underline " -%}
          {% else %}
            {%- echo " text-primary/70 hover:text-accent-purple " -%}
          {%- endif -%}

          {%- if forloop.first -%}
            {%- echo "first " -%}
          {%- elsif forloop.last -%}
            {%- echo "last " -%}
          {%- endif -%}
        {%- endcapture %}

        {% if link.url == '/pages/marketplace' %}
          {% if link.active or dark %}
            {% continue %}
          {% endif %}
          <li>
            <a
              href="{{ link.url }}"
              target="_blank"
              class="flex gap-[10px] items-center text-accent-purple text-[16px] font-plus-medium hover:font-bold"
            >
              {{ link.title }}
              {% render 'icon-external.liquid' %}
            </a>
          </li>
        {% else %}
          <li>
            <a href="{{ link.url }}" class="{{clsx}} flex gap-[10px] items-center text-[16px]">
              {{ link.title }}
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>

    <div class="pb-[13vh] w-[110px]">
      <a href="/account/login" class="btn btn-text-primary justify-start !px-0 py-3 mb-[32px]">Login</a>
      <a href="/account/register" class="btn btn-primary font-plus-bold">Signup</a>
    </div>
  </div>
</nav>
