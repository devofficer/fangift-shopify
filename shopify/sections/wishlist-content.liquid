        {% render 'wish-card': title: 'The Workout Mat', image: 'product2.png', price: '98.00' %}
        {% render 'wish-card': title: 'Apple AirPods Max', image: 'product3.png', price: '549.00' %}
        {% render 'wish-card': title: 'Fitbit Versa 4', image: 'product0.png', price: '300.50' %}
        {% render 'wish-card': title: 'Gymshark Energy', image: 'product1.png', price: '59.99' %}
        {% render 'wish-card': title: 'The Workout Mat', image: 'product2.png', price: '98.00' %}
        {% render 'wish-card': title: 'Apple AirPods Max', image: 'product3.png', price: '549.00' %}
        {% render 'wish-card': title: 'Fitbit Versa 4', image: 'product0.png', price: '300.50' %}
        {% render 'wish-card': title: 'Gymshark Energy', image: 'product1.png', price: '59.99' %}
        {% render 'wish-card': title: 'The Workout Mat', image: 'product2.png', price: '98.00' %}
        {% render 'wish-card': title: 'Apple AirPods Max', image: 'product3.png', price: '549.00' %}
        {% render 'wish-card': title: 'Fitbit Versa 4', image: 'product0.png', price: '300.50' %}
        {% render 'wish-card': title: 'Gymshark Energy', image: 'product1.png', price: '59.99' %}
        {% render 'wish-card': title: 'The Workout Mat', image: 'product2.png', price: '98.00' %}
        {% render 'wish-card': title: 'Apple AirPods Max', image: 'product3.png', price: '549.00' %}
