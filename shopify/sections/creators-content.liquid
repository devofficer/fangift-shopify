<div class="bg-primary-background">
  <div class="container px-6 md:px-[100px] pb-[100px]">
    <div class="grid">
      <div class="mt-[-94px] md:mt-[-50px] mb-10 w-full max-w-[600px] mx-auto flex flex-col md:flex-row gap-6 bg-primary-white rounded-[8px] p-6 shadow-[0_18px_37.5px_0_rgba(0,0,0,0.05)]">
        <div class="relative flex-grow">
          <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
            {% render 'icon-search' : class: 'w-4 h-4 text-accent-purple' %}
          </div>
          <input
            type="search"
            class="block w-full p-4 pl-12 text-body-sm text-primary placeholder:text-primary-border border border-[rgba(0,0,0,0.1)] rounded-lg bg-primary-white focus:ring-blue-500 focus:border-blue-500 "
            placeholder="Search..."
          >
        </div>
        <button class="btn btn-primary flex items-center gap-[10px]">
          <span>Search Creators</span>
          {% render 'icon-arrow-right' %}
        </button>
      </div>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-5 gap-y-4 relative min-h-[500px]"
      id="container-creators"
    ></div>
  </div>
</div>

{{ 'creators.min.js' | asset_url | script_tag }}
