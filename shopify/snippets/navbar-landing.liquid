<nav role="navigation" class="hidden static lg:flex items-center flex-grow">
  <ul class="flex flex-col lg:flex-row gap-[40px]">
    {% for link in linklists['main-menu'].links %}
      {% capture clsx -%}
        {%- if link.active -%}
          {%- echo "text-accent-purple underline " -%}
        {% else %}
          {%- echo " text-primary/70 hover:text-accent-purple " -%}
        {%- endif -%}

        {%- if forloop.first -%}
          {%- echo "first " -%}
        {%- elsif forloop.last -%}
          {%- echo "last " -%}
        {%- endif -%}
      {%- endcapture %}
      {% if link.url == '/pages/marketplace' %}
        {% if link.active or dark %}
          {% continue %}
        {% endif %}
        <li>
          <a
            href="{{ link.url }}"
            target="_blank"
            class="flex gap-[10px] items-center text-accent-purple text-[16px] font-plus-medium hover:font-bold"
          >
            {{ link.title }}
            {% render 'icon-external.liquid' %}
          </a>
        </li>
      {% else %}
        <li>
          <a href="{{ link.url }}" class="{{clsx}} flex gap-[10px] items-center text-[16px]">
            {{ link.title }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>
