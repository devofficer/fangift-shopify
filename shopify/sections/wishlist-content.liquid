<link
  rel="stylesheet"
  type="text/css"
  href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.css"
>
<link
  rel="stylesheet"
  type="text/css"
  href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick-theme.css"
>

<div class="bg-primary-background">
  <div class="container px-6 md:px-[45px] pb-[100px] grid grid-cols-1 gap-x-[18px] gap-y-[16px]">
    <div class="-mt-8">
      <div class="px-6 py-4 flex items-center justify-between bg-primary-white rounded-[8px]">
        <h4 class="text-heading-h4 text-primary-black">My Wishlist</h4>
        <div class="hidden lg:flex gap-4">
          <span class="text-body-sm text-primary-text">Personalize:</span>
          <a href="/pages/settings?tab=address" class="text-accent">Shipping Address</a>
          <a href="/pages/settings?tab=size" class="text-accent">My Sizes</a>
          <a href="/pages/settings?tab=social" class="text-accent">My Social</a>
        </div>
      </div>
    </div>
    <div class="min-h-[40vh] flex-col items-center justify-center gap-4 hidden text-center" id="no-gifts">
      {% render 'icon-gift-big' %}
      <h3 class="text-heading-h3 text-primary-black">No Gifts Added Yet</h3>
      <p class="text-body-md text-primary-text">Your wishlist is empty. Click 'Add Gift' to add items.</p>
      <a href="/pages/fangifts" class="btn btn-primary btn-add-gift">+ Add gift</a>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-x-[18px] gap-y-[16px] relative mb-12"
      id="container-wishlists"
    ></div>
    <!-- Delete confirm modal -->
    {%
      render 'modal-confirm' : id: 'modal-delete'
      , content: 'Are you sure you want to delete this gift?'
    %}

    <div class="overflow-hidden bg-white rounded-[16px] px-10 py-5">
      <h4 class="text-heading-h4">🔥 Popular Gifts</h4>
      <p class="text-body-sm mb-6">Browse the most popular gifts in your area</p>
      <div id="carousel-products"></div>
    </div>
  </div>
</div>

<div
  id="drawer-select-gift"
  class="drawer"
  tabindex="-1"
>
  <button type="button" class="btn-close-drawer">
    {% render 'icon-close' : class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-[76px]">Add Gift to Wishlist 🎁</h4>
  <ul class="grid gap-4 grid-cols-1 mb-4">
    <li>
      <input
        type="radio"
        id="source-fangift"
        name="gift-source"
        value="fangift"
        class="hidden peer"
        checked
        required
      >
      <label
        for="source-fangift"
        class="card p-6 grid grid-cols-1 gap-1 cursor-pointer hover:bg-gray-100 peer-checked:border-accent-purple"
      >
        <h4 class="text-primary-black text-heading-h4">Select from FanGift</h4>
        <p class="text-primary-text text-body-md">Browse and select from FanGift’s Marketplace</p>
      </label>
    </li>
    <li>
      <input
        type="radio"
        id="select-product"
        name="gift-source"
        value="product"
        class="hidden peer"
        required
      >
      <label
        for="select-product"
        class="card p-6 grid grid-cols-1 gap-1 cursor-pointer hover:bg-gray-100 peer-checked:border-accent-purple"
      >
        <h4 class="text-primary-black text-heading-h4">Enter Product Link</h4>
        <p class="text-primary-text text-body-md">Enter product link from another store</p>
      </label>
    </li>
  </ul>
  <button
    id="btn-gift-next"
    type="button"
    class="btn btn-primary w-full"
  >
    Next 👉
  </button>
</div>

<div
  id="drawer-add-gift"
  class="drawer"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <button type="button" class="btn-close-drawer">
    {% render 'icon-close' : class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-[76px]">Add a gift 🎁</h4>
  <p class="text-body-sm text-primary-black mb-4">Enter Link from FanGift</p>
  <p class="text-body-md text-primary-text mb-4">
    Pick a product you love from the FanGift catalog. Simply click on it for details and copy the URL from the top of
    your browser. Paste the copied URL back here in the box. Don't forget, when a gift is bought, the vendor sends it
    straight to you.
  </p>
  <a href="#" class="text-accent-purple font-plus-bold text-body-md flex items-center gap-[10px] mb-4">
    Browse FanGift's Marketplace
    {% render 'icon-external' %}
  </a>
  <input
    type="text"
    placeholder="Paste Product URL"
    autofocus
    class="textfield mb-4"
  >
  <button
    id="btn-add-next"
    type="button"
    class="btn btn-primary w-full"
  >
    Next 👉
  </button>
</div>

<div
  id="drawer-suggest-gift"
  class="drawer"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <button type="button" class="btn-close-drawer">
    {% render 'icon-close' : class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-10 md:mb-[76px]">Add a gift 🎁</h4>
  <div class="text-body-md text-[#3f6d85] mb-6 md:mb-[100px] bg-[#cdeafa] p-6 rounded-[16px]">
    <h5 class="text-heading-h5 mb-4">Product Submitted</h5>
    <p>
      We have received your product submission and our team is in the process of confirming if we can deliver to your
      area. Once we have finalized our review we will notify you by email. In the meantime if you have any questions
      please feel free to
      <a
        class="font-bold underline"
        href="https://fangift.zendesk.com/hc/en-us/sections/20000965359892-Creator-Support"
        target="_blank"
        >contact us</a
      >
    </p>
  </div>
  <button
    type="button"
    class="btn btn-primary w-full mb-4 md:mb-[75px]"
    id="btn-suggest-close"
  >
    Close
  </button>
  <hr class="border-primary-border mb-4 md:mb-[76px]">
  <button class="block text-accent-purple underline text-body-md text-center w-full" id="btn-suggest-another">
    Suggest another gift
  </button>
</div>

<div
  id="drawer-gift-details"
  class="drawer"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <button type="button" class="btn-close-drawer">
    {% render 'icon-close' : class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-4 md:mb-[76px]">Gift Details</h4>
  <input
    type="file"
    class="hidden"
    name="main-image"
    id="file-main-image"
  >
  <div class="mb-4 relative w-full md:w-[340px] rounded-[16px]">
    <img
      alt="product image"
      data-placeholder="{{ 'placeholder-image.png' | asset_url }}"
      class="w-[400px] h-[300px] object-contain rounded-[16px]"
      id="img-product-main"
    >
  </div>
  <h4 class="text-heading-h4 mb-4" id="text-product-title"></h4>
  <h5 class="text-heading-h5 mb-4" id="text-product-price"></h5>
  <h3 class="text-body-md mb-2">Product Description</h3>
  <div class="text-body-sm flex-grow mb-8 text-gray-500" id="text-desc"></div>
  <button
    type="button"
    class="btn btn-primary w-full"
    id="btn-add-wishlist"
  >
    💜 Add to Wishlist
  </button>
  <button
    type="button"
    class="btn text-red-600 hidden"
    id="btn-delete-wishlist"
  >
    <div class="flex gap-1 items-center">
      {% render 'icon-delete' %}
      Delete From Wishlist
    </div>
  </button>
</div>

<div
  id="drawer-gift-product"
  class="drawer"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <button type="button" class="btn-close-drawer">
    {% render 'icon-close' : class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-4 md:mb-[76px]">Add a gift 🎁</h4>
  <p class="text-body-sm text-primary-black mb-4">Enter Product Link</p>
  <p class="text-body-md text-primary-text mb-4">
    Found a product on another site that's not listed on FanGift? No problem. Just navigate to the product page on the
    external site, copy the URL from your browser's address bar, and paste the copied URL back here in the box. We'll
    take care of the rest.
  </p>
  <input
    type="text"
    placeholder="Paste Product URL"
    class="textfield mb-4"
    autofocus
    id="text-product-link"
  >
  <button
    id="btn-next-product"
    type="button"
    class="btn btn-primary w-full mb-4 md:mb-[75px]"
  >
    Submit
  </button>
  <hr class="border-primary-border mb-4 md:mb-[76px]">
  <a href="/pages/fangifts" class="block text-accent-purple underline text-body-md text-center w-full">
    Find the perfect gift for your wishlist
  </a>
</div>

<!-- Social modal -->
<div
  id="social-modal"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Your social</h3>
        <button
          type="button"
          id="btn-close-social"
          class="end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 md:p-5">
        <div class="max-w-[400px] mx-auto flex flex-col gap-8 mb-8 px-6">
          <div class="flex items-center gap-4">
            <svg
              class="w-[32px] h-[32px]"
              xmlns="http://www.w3.org/2000/svg"
              height="16"
              width="14"
              viewBox="0 0 448 512"
            >
              <path
                opacity="1"
                fill="#1E3050"
                d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z" />
            </svg>
            <input
              type="text"
              id="instagram"
              name="instagram"
              placeholder="Instagram username"
              class="textfield"
            >
          </div>
          <div class="flex items-center gap-4">
            <svg
              class="w-[32px] h-[32px]"
              xmlns="http://www.w3.org/2000/svg"
              height="16"
              width="14"
              viewBox="0 0 448 512"
            >
              <path
                opacity="1"
                fill="#1E3050"
                d="M448 209.9a210.1 210.1 0 0 1 -122.8-39.3V349.4A162.6 162.6 0 1 1 185 188.3V278.2a74.6 74.6 0 1 0 52.2 71.2V0l88 0a121.2 121.2 0 0 0 1.9 22.2h0A122.2 122.2 0 0 0 381 102.4a121.4 121.4 0 0 0 67 20.1z" />
            </svg>
            <input
              type="text"
              id="tiktok"
              name="tiktok"
              placeholder="Tiktok username"
              class="textfield"
            >
          </div>
          <div class="flex items-center gap-4">
            <svg
              class="w-[32px] h-[32px]"
              xmlns="http://www.w3.org/2000/svg"
              height="16"
              width="16"
              viewBox="0 0 512 512"
            >
              <path
                opacity="1"
                fill="#1E3050"
                d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z" />
            </svg>
            <input
              type="text"
              id="twitter"
              name="twitter"
              placeholder="Twitter/X username"
              class="textfield"
            >
          </div>
          <div class="flex items-center gap-4">
            <svg
              class="w-[32px] h-[32px]"
              xmlns="http://www.w3.org/2000/svg"
              height="16"
              width="10"
              viewBox="0 0 320 512"
            >
              <path
                opacity="1"
                fill="#1E3050"
                d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z" />
            </svg>
            <input
              type="text"
              id="facebook"
              name="facebook"
              placeholder="Facebook username"
              class="textfield"
            >
          </div>
        </div>
        <button
          type="button"
          class="btn btn-primary w-full mb-4"
          id="btn-save-socials"
        >
          Save Changes
        </button>
        <div class="flex items-center justify-end gap-1">
          <div class="flex items-center h-5">
            <input
              id="do-not-show-social"
              type="checkbox"
              value=""
              class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-600 dark:border-gray-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800"
              required
            >
          </div>
          <label for="do-not-show-social" class="text-md font-medium text-gray-900 dark:text-gray-300"
            >Do not show me this again</label
          >
        </div>
      </div>
    </div>
  </div>
</div>

