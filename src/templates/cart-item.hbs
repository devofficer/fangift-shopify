<div class="flex gap-4 h-fit">
  <div class="w-[82px] h-[82px]">
    <img alt="cart item image" class="w-[82px] h-[82px] bg-primary-gray rounded-[16px]" />
  </div>
  <div class="flex flex-col justify-between flex-grow gap-4">
    <h5 class="text-black whitespace-nowrap text-ellipsis overflow-hidden w-[300px]">{{title}}</h5>
    <button class="btn w-fit btn-remove-from-cart" data-product-id="{{ id }}">remove</button>
  </div>
  <div class="flex flex-col justify-between gap-4">
    <p>${{ priceRangeV2.minVariantPrice.amount }}</p>
    <span class="text-right">gift</span>
  </div>
</div>