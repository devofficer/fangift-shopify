<nav role="navigation" class="flex items-center h-full">
  <ul class="hidden xl:flex gap-[40px] h-full">
    {% for link in linklists['shop-menu'].links %}
      {% capture active_class -%}
        {%- if link.active -%}
          {%- echo "text-accent-peach border-accent-peach " -%}
        {% else %}
          {%- echo "text-primary-border border-transparent hover:text-accent-peach " -%}
        {%- endif -%}

        {%- if forloop.first -%}
          {%- echo "first " -%}
        {%- elsif forloop.last -%}
          {%- echo "last " -%}
        {%- endif -%}
      {%- endcapture %}

      <li class="h-full">
        <a
          href="{{ link.url }}"
          class="{{ active_class }} border-b-[3px] h-full flex gap-[10px] items-center text-[16px]"
        >
          {{ link.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
