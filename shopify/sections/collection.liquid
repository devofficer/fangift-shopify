{{ 'collection.min.css' | asset_url | stylesheet_tag }}

<div class="bg-primary-background">
  <div class="container px-[100px] pb-[100px]">
    <div class="grid grid-cols-12 gap-x-[60px]">
      <div class="col-span-8 mt-[-10px] mb-9">
        <div class="bg-primary-white rounded-[8px] p-6 shadow-[0_18px_37.5px_0_rgba(0,0,0,0.05)]">
          <div class="text-body-sm text-primary-text mb-4">Vendor</div>
          <div class="flex gap-6">
            <div class="relative flex-grow">
              <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                {% render 'icon-search': class: 'w-4 h-4 text-accent-purple' %}
              </div>
              <input
                type="search"
                class="block w-full p-4 pl-12 text-body-sm text-primary placeholder:text-primary-border border border-[rgba(0,0,0,0.1)] rounded-lg bg-primary-white focus:ring-blue-500 focus:border-blue-500 "
                placeholder="Search..."
              >
            </div>
            <button class="btn btn-primary flex items-center gap-[10px]">
              <span>Search Vendor</span>
              {% render 'icon-arrow-right' %}
            </button>
          </div>
        </div>
      </div>
      <div class="col-start-1 col-span-3">
        <div class="grid grid-cols-1 gap-8">
          <div class="filter-box">
            <h6 class="text-heading-h6 mb-4 text-black">Price</h6>
            <div id="slider-range" class="mb-4"></div>
            <div class="text-body-sm text-primary flex justify-between">
              <span>Range</span><span id="amount"></span>
            </div>
          </div>
          <div class="filter-box">
            <div class="filter-box-header">
              <h6 class="text-heading-h6 text-black">Categories</h6>
              <button class="btn btn-icon btn-filter-toggle">
                {% render 'icon-arrow-down': class: '[.toggled>&]:hidden' %}
                {% render 'icon-arrow-up': class: 'hidden [.toggled>&]:block' %}
              </button>
            </div>
            <div class="filter-box-content">
              <div class="grid grid-cols-1 gap-4" id="container-categories"></div>
            </div>
          </div>

          <div class="filter-box">
            <div class="filter-box-header">
              <h6 class="text-heading-h6 text-black">Locations</h6>
              <button class="btn btn-icon btn-filter-toggle">
                {% render 'icon-arrow-down': class: '[.toggled>&]:hidden' %}
                {% render 'icon-arrow-up': class: 'hidden [.toggled>&]:block' %}
              </button>
            </div>
            <div class="filter-box-content"></div>
          </div>
        </div>
      </div>
      <div class="col-span-9">
        <div class="grid grid-cols-4 gap-[26px] relative mb-[60px]" id="container-products"></div>
        <div class="flex justify-center">
          <button
            type="button"
            class="btn btn-primary-outlined flex items-center justify-center w-[160px]"
            id="btn-load-more"
          >
            Load More
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<div
  id="drawer-add-wishlist"
  class="fixed top-0 right-0 z-40 h-screen px-[40px] py-[44px] overflow-y-auto translate-x-full bg-primary-background w-[600px]"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <button
    type="button"
    class="btn-close-drawer"
  >
    {% render 'icon-close': class: 'w-3 h-3' %}
  </button>
  <h4 class="text-heading-h4 mb-[76px]">Gift Details</h4>
  <input type="file" class="hidden" name="main-image" id="file-main-image">
  <div class="mb-4 relative w-[340px] rounded-[16px] group cursor-pointer" id="wrapper-main-image">
    <div class="absolute transition-all inset-0 z-10 items-center justify-center cursor-pointer hidden group-hover:flex text-[24px] text-primary-white">
      Click to upload image
    </div>
    <img
      alt="product image"
      data-placeholder="{{ 'placeholder-image.png' | asset_url }}"
      class="w-[400px] h-[300px] object-contain rounded-[16px] transition-all group-hover:blur-sm"
      id="img-product-main"
    >
  </div>
  <div class="flex items-center gap-4">
    <input
      type="text"
      name="product-title"
      placeholder="Paste Product URL"
      class="textfield mb-4"
      id="text-product-title"
    >
    <div class="textfield-first-symbol mb-4">
      <span class="text-accent-purple">$</span>
      <input
        name="price"
        type="number"
        placeholder="Price"
        value="0.0"
        id="text-product-price"
      >
    </div>
  </div>
  {% comment %} {% render 'dropdown-list': placeholder: 'Select Collection (Optional)' %} {% endcomment %}
  <div class="flex items-center justify-between mb-6">
    <span class="text-body-sm text-primary-black">Digital Good</span>
    <label class="relative inline-flex items-center cursor-pointer">
      <input type="checkbox" name="digital-good" class="sr-only peer" id="checkbox-digital-good">
      <div
        class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"
      ></div>
    </label>
  </div>
  <input
    type="number"
    name="shipping price"
    placeholder="Shipping in $"
    class="textfield mb-4"
    id="text-shipping-price"
  >
  <button type="button" class="btn btn-primary w-full" id="btn-add-wishlist">ðŸ’œ Add to Wishlist</button>
</div>

<script src="{{ 'collection.min.js' | asset_url }}" defer></script>
