<div
  id="form-email"
  class="card-register relative hidden"
  onsubmit="return false;">
  <div class="flex flex-col justify-center h-full">
    {% render "button-back", id: "btn-back-email" %}

    <div class="text-center mb-8">
      <img
        src="{{ 'icon-email.svg' | asset_url }}"
        alt="email"
        class="mx-auto mb-2" />

      <h1 class="text-primary-black text-heading-h3 mb-2">
        Check your email.
      </h1>
      <div class="text-center text-primary-text text-body-md">
        A confirmation link has been sent to
        <br/>
        <span id="lbl-email" class="text-accent-peach"></span>.
      </div>
    </div>

    <button class="btn btn-primary !font-plus-semi mx-auto">
      Open email
    </button>
  </div>
</div>